            include partials/experience
        include partials/footer

script.
    ScrollReveal().reveal('#description', {
        delay: 375,
        duration: 1000,
        scale: 1.5
    });
    ScrollReveal().reveal('#skills', {
        distance: '100%',
        origin: 'left',
        delay: 500,
        duration: 1000
    });
    ScrollReveal().reveal('#experience', {
        distance: '100%',
        origin: 'left',
        duration: 1000
    });

script(type="text/javascript").
    async function contactMe() {
        const post = await fetch("/contact").then((res) => res.json());
        window.location.href = post.message;
    }
