<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" type="text/css" href="/stylesheets/main.css" media="screen")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous")
        script(src="https://kit.fontawesome.com/58515bd467.js" crossorigin="anonymous")
        title Meldocia
    body
        include partials/header
        container#carousel-slides.carousel.slide
            div.carousel-inner
                div#slide0.carousel-item.active
                    include partials/description
                div#slide1.carousel-item
                    include partials/skills
                div#slide2.carousel-item
                    include partials/portfolio
        include partials/footer
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous")
        script.
            window.addEventListener("wheel", event => {
                const activeSlide = document.getElementsByClassName("carousel-item active")[0];
                const activeSlideIndex = Number(activeSlide.id.substring(5))
                // delta is 1 for scroll down or -1 for scroll up
                const delta = Math.sign(event.deltaY);
                if ((delta == 1 && activeSlideIndex === 2) || (delta == -1 && activeSlideIndex === 0)) {
                    return;
                }
                activeSlide.className = "carousel-item";
                document.getElementById("slide" + (activeSlideIndex + delta)).className = "carousel-item active";
            });