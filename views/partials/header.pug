header.pb-2.mb-4
    div.header-menu.d-flex.justify-content-between.align-items-start.align-items-center
        div.menu
            a.me-2(href="/" target="_self" title="Homepage")
                img(src="/images/raccoon_logo.png" alt="Sign" height="70px")
            button.btn.btn-link.me-2.description(type="button" data-bs-target="#carousel-slides" data-bs-slide-to="0" title="Show description")
                i.fa-solid.fa-address-card.fa-xl
            button.btn.btn-link.me-2.skills(type="button" data-bs-target="#carousel-slides" data-bs-slide-to="1" title="Show skills")
                i.fa-solid.fa-fire.fa-xl
            button.btn.btn-link.portfolio(type="button" data-bs-target="#carousel-slides" data-bs-slide-to="2" title="Show portfolio")
                i.fa-sharp.fa-solid.fa-images.fa-xl
        div.socialnetwork.text-center
            p.h4.m-0 Angele Henry
            button(type="button" title="Send me an email" onclick="contactMe()").btn.btn-link.p-0.me-1
                i.fa-solid.fa-square-envelope.fa-lg
            a.btn.btn-link.p-0(role="button" href="https://www.linkedin.com/in/angele-marques/" target="_blank" title="Go to LinkedIn page")
                i.fa-brands.fa-linkedin.fa-lg
script.
    async function contactMe() {
        const post = await fetch("/contact").then((res) => res.json());
        window.location.href = post.message;
    }